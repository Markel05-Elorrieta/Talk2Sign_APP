<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rf671cq4zqt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#292E32">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="1dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/app_name"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    />
                <TextView
                    android:id="@+id/app_descr"
                    android:textColor="#BBBBBB"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_description"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r_title"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/register"
                />
            <LinearLayout
                android:id="@+id/rifbkbv1n4u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="11dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/r_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_txtviews"
                    android:hint="@string/name_placeholder"
                    android:inputType="text"
                    android:paddingVertical="17dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp"
                    android:textColor="#F4EEEE"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/r_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_txtviews"
                    android:hint="@string/surname_placeholder"
                    android:inputType="text"
                    android:paddingVertical="17dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp"
                    android:textColor="#F4EEEE"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/r_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_txtviews"
                    android:hint="@string/email_placeholder"
                    android:inputType="text"
                    android:paddingVertical="17dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp"
                    android:textColor="#F4EEEE"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/r_datebirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_txtviews"
                    android:hint="@string/birth_date_placeholder"
                    android:inputType="text"
                    android:paddingVertical="17dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp"
                    android:textColor="#F4EEEE"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_txtviews"
                android:paddingVertical="17dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="11dp"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_passwd"
                    android:textColor="#919191"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/password_placeholder"
                    />

                <ImageView
                    android:id="@+id/btn_eye"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginVertical="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    app:srcCompat="@android:drawable/ic_menu_view" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r_passwd_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_txtviews"
                android:paddingVertical="17dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="51dp"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_passwd_repeat"
                    android:textColor="#919191"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/repeat_password_placeholder"
                    />

                <ImageView
                    android:id="@+id/btn_eye2"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginVertical="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    app:srcCompat="@android:drawable/ic_menu_view" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/buttons_color"
                android:paddingVertical="17dp"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btn_register"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/register"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>